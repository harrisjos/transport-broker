{
    "name": "transport-broker",
    "version": "1.0.0",
    "description": "Full-stack transport and logistics broker platform",
    "private": true,
    "workspaces": [
        "app",
        "api"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:app\" \"npm run dev:api\"",
        "dev:app": "npm run dev --workspace=app",
        "dev:api": "npm run dev --workspace=api",
        "build": "npm run build --workspace=app && npm run build --workspace=api",
        "start": "npm run start --workspace=app",
        "test": "npm run test --workspace=app && npm run test --workspace=api"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "transport",
        "logistics",
        "freight",
        "marketplace",
        "nextjs",
        "fastify"
    ],
    "author": "Transport Broker Team",
    "license": "MIT"
}