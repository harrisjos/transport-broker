{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "checkJs": false,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ES2020"
    },
    "include": [
        "**/*.js"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeAcquisition": {
        "enable": false
    }
}